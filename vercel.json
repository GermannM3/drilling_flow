{
  "version": 2,
  "buildCommand": "bash vercel-build.sh",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "DISABLE_BOT": "False",
    "USE_POLLING": "True",
    "PYTHONPATH": "/var/task"
  },
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "memory": 1024,
        "maxDuration": 10
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ]
} 