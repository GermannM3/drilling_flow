{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "api/index.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/webhook/(.*)",
      "dest": "api/index.py",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json|svg|webp))",
      "dest": "/public/$1",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "DISABLE_BOT": "False",
    "USE_POLLING": "False",
    "PYTHONPATH": ".",
