{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "PYTHONPATH": ".",
    "APP_MODULE": "app.main:app"
  },
  "buildCommand": "pip install -r requirements-vercel.txt",
  "devCommand": "python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
  "installCommand": "pip install -r requirements-vercel.txt"
} 