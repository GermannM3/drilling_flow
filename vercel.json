{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/vercel.py"
    }
  ],
  "env": {
    "DISABLE_BOT": "True",
    "USE_POLLING": "False",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "api/vercel.py": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "@vercel/python@3.1.0"
    }
  }
} 