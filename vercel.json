{
  "version": 2,
  "builds": [
    {
      "src": "app/vercel.py",
      "use": "@vercel/python"
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app/vercel.py"
    }
  ],
  "env": {
    "DISABLE_BOT": "True",
    "USE_POLLING": "False",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "app/vercel.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 