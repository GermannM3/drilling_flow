{
  "version": 2,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/vercel.py"
    }
  ],
  "env": {
    "DISABLE_BOT": "True",
    "USE_POLLING": "False",
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "app/vercel.py": {
      "memory": 1024,
      "maxDuration": 10,
      "runtime": "@vercel/python"
    }
  },
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh"
} 